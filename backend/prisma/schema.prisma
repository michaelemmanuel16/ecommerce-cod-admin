  agent_id                                   Int
  amount                                     Decimal       @db.Decimal(19, 4)
  status                                     DepositStatus @default(pending)
  deposit_date                               DateTime
  reference_number                           String        @unique
  verified_at                                DateTime?
  verified_by_id                             Int?
  notes                                      String?
  created_at                                 DateTime      @default(now())
  updated_at                                 DateTime
  deposit_method                             String
  users_agent_deposits_agent_idTousers       User          @relation("agent_deposits_agent_idTousers", fields: [agent_id], references: [id])
  users_agent_deposits_verified_by_idTousers User?         @relation("agent_deposits_verified_by_idTousers", fields: [verified_by_id], references: [id])

  @@index([agent_id, deposit_date])
  @@index([agent_id])
  @@index([deposit_date])
  @@index([status])
}

model journal_entries {
  id                                      Int                    @id @default(autoincrement())
  entry_number                            String                 @unique
  entry_date                              DateTime
  description                             String
  source_type                             JournalSourceType
  source_id                               Int?
  is_voided                               Boolean                @default(false)
  voided_at                               DateTime?
  voided_by                               Int?
  void_reason                             String?
  reversing_entry_id                      Int?                   @unique
  created_by                              Int
  created_at                              DateTime               @default(now())
  updated_at                              DateTime
  account_transactions                    account_transactions[]
  users_journal_entries_created_byTousers User                   @relation("journal_entries_created_byTousers", fields: [created_by], references: [id])
  journal_entries                         journal_entries?       @relation("journal_entriesTojournal_entries", fields: [reversing_entry_id], references: [id])
  other_journal_entries                   journal_entries?       @relation("journal_entriesTojournal_entries")
  users_journal_entries_voided_byTousers  User?                  @relation("journal_entries_voided_byTousers", fields: [voided_by], references: [id])
  orders                                  Order[]

  @@index([created_at])
  @@index([entry_date])
  @@index([is_voided])
  @@index([source_type, source_id])
  @@index([source_type, source_id, is_voided])
}

