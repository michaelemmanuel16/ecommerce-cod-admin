# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection string with connection pool parameters
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?options
# Connection pool params:
#   - connection_limit: Max number of concurrent database connections (default: 10, recommended: 30 for production)
#   - pool_timeout: Seconds to wait for available connection (default: 10)
#   - connect_timeout: Seconds to wait for initial connection (default: 10)
DATABASE_URL=postgresql://postgres:password@localhost:5432/ecommerce_cod_admin?schema=public&connection_limit=30&pool_timeout=10&connect_timeout=10

# Security - JWT Configuration
# IMPORTANT: Generate strong secrets (minimum 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-here

# Security - Webhook Configuration
WEBHOOK_SECRET=your-super-secret-webhook-key-min-32-chars-here

# Bootstrap Admin Configuration
# Used for first-time deployment to create initial admin user
# Only runs if database is empty (no users exist)
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_ADMIN_PASSWORD=your-strong-password-here-min-8-chars
BOOTSTRAP_ADMIN_FIRST_NAME=Admin
BOOTSTRAP_ADMIN_LAST_NAME=User
BOOTSTRAP_ADMIN_PHONE=+1234567890

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

